<Nav_setting_scr>:
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:1,.05
        pos_hint:{'center_x':.5,'center_y':.88}
        padding:'5dp'
        md_bg_color: app.theme_cls.primary_color
        MDLabel:
            text:"Setting Page"
            halign:"center"
            bold:True
            color:'#1f2ce6ff'
            font_size:'20sp'
    MDGridLayout:
        cols:4
        rows:2
        padding:'5dp'
        spacing:'5dp'
        size_hint:.95,.8
        pos_hint:{'center_x':.5,'center_y':.7}
        adaptive_height:True
        MDLabel:
            text:"PATH"
            color:'#1f2ce6'
            font_size:'20sp'
            bold:True
            size_hint:.2,.1
            halign:'center'
        MDTextField:
            id:path_id
            mode:"rectangle"
            hint_text:'server path'
            helper_text:"//server/Any_you_path/path"
            height:'50dp'
        Submit_btn:
            text:"Save"
            on_press:root.save_path()
        Cancel_btn:
            text:"Delete"
            on_press:root.delete_path()
     
        