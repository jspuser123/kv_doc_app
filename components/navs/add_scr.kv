<Nav_add_scr>:
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.85,.05
        pos_hint:{'center_x':.5,'center_y':.88}
        padding:'5dp'
        MDLabel:
            text:"Document Add Page"
            halign:"center"
            bold:True
            color:'#1f2ce6ff'
            font_size:'20sp'
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.99,.87
        pos_hint:{'center_x':.5,'center_y':.435}
        padding:'5dp'
        spacing:'5dp'
        md_bg_color:'#f3edf5ff'
        MDCard:
            orientation:'vertical'
            padding:'5dp'
            spacing:'5dp'
            size_hint_x:.7
            MDLabel:
                text:"Document Name"
                halign:"center"
                color:'#1f2ce6'
                font_size:'20sp'
                size_hint_y:None
                height:'50dp'
                bold:True
                pos_hint:{'top':1}
            Image:
                source:'assets/images/ai.png'
            MDTextField:
                id:document_io
                hint_text:'IO'
                mode:"rectangle"
                write_tab:False
                write_tab:False
            MDTextField:
                id:document_description
                hint_text:'Description'
                mode:"rectangle"
                write_tab:False
            MDTextField:
                id:name
                hint_text:'Invoice No'
                mode:"rectangle"
                write_tab:False
            MDTextField:
                id:document_style
                hint_text:'Style'
                mode:"rectangle"
                write_tab:False
            MDTextField:
                id:document_color
                hint_text:'Color'
                mode:"rectangle"
                write_tab:False
            MDTextField:
                id:document_pi
                hint_text:'PI'
                mode:"rectangle"
                write_tab:False
        MDCard:
            orientation:'vertical'
            padding:'5dp'
            spacing:'5dp'
            size_hint_x:.7
            MDLabel:
                text:"Value Add"
                halign:"center"
                color:'#1f2ce6'
                font_size:'20sp'
                size_hint_y:None
                height:'50dp'
                bold:True
                pos_hint:{'top':1}
            MDTextField:
                id:po_qty
                hint_text:'PO Qty'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDTextField:
                id:delivery_qty
                hint_text:'Delivery Qty'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDCard:
                size_hint_y:None
                height:'60dp'
                pos_hint:{'top':.1}
                MDTextField:
                    id:usd
                    hint_text:'USD'
                    input_type:'number'
                    input_filter: 'float'
                    mode:'rectangle'
                    write_tab:False
                MDTextField:
                    id:inr
                    hint_text:'INR'
                    input_type:'number'
                    input_filter: 'float'
                    mode:'rectangle'
                    write_tab:False
            MDTextField:
                id:excange_rate
                hint_text:'Exchange Rate'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
                on_text:root.usd_calc(self.text)
            MDTextField:
                id:po_value_usd
                hint_text:'PO Value'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDTextField:
                id:delivery_usd
                hint_text:'Delivery value'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDTextField:
                id:excess_shortage
                hint_text:'Excess/Shortage'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDTextField:
                id:percent
                hint_text:'Percent'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            MDTextField:
                id:document_value
                hint_text:'Invoice Value'
                input_type:'number'
                input_filter: 'float'
                mode:'rectangle'
                write_tab:False
            
        MDCard:
            orientation:'vertical'
            padding:'15dp'
            spacing:'5dp'
            size_hint_x:1.25
            MDCard:
                padding:'5dp'
                spacing:'15dp'
                size_hint_y:None
                height:'60dp'
                md_bg_color:'#f3e5f8ff'
                MDTextField:
                    id:document_name
                    mode:"rectangle"
                    write_tab:False
                    hint_text:'item Name'
                    height:'50dp'
                    on_focus: if self.focus:root.menu.open()
                    write_tab:False
                MDTextField:
                    id:document_path
                    mode:"rectangle"
                    write_tab:False
                    hint_text:'item select'
                    height:'50dp'
                    on_focus: if self.focus:root.document_view()
                    write_tab:False

                MDIconButton:
                    icon:"plus"
                    theme_text_color:'Custom'
                    text_color:'#f5ecf7ff'
                    md_bg_color:'#D72B66'
                    on_press: root.upload_document()
            MDCard:
                MDScrollView:
                    MDList:
                        id:list_cards
                    
            MDCard:
                pos_hint:{'center_x':.5}
                size_hint:None,None
                width:'232dp'
                height:'50dp'
                padding:'5dp'
                spacing:'5dp'
                Submit_btn:
                    id:submit_btn
                    text:"Save"
                    on_press: root.save_document()
                    disabled:False
                    # opacity:1
                Update_btn:
                    id:update_btn
                    text:"Update"
                    on_press: root.document_update()
                    disabled:True
                    # opacity:0
                Cancel_btn:
                    id:cancel_btn
                    text:"Cancel"
                    on_press: root.cancel_document()
                
        MDCard:
            orientation:'vertical'
            size_hint_x:1.17
            Lyt:
                MDLabel:
                    text:"Documents List"
                    halign:"center"
                    bold:True
                    color:'#1f2ce6ff'
                    font_size:'20sp'
                    size_hint_y:None
                    height:'50dp'
                    pos_hint:{'top':1}
                MDScrollView:
                    pos_hint:{'center_y':.45}
                    size_hint_y:.9
                    MDList:
                        padding:'5dp'
                        spacing:'5dp'
                        id:documents_cards   
                Spin:
                    id:spin
                    pos_hint:{'center_x':.5,'center_y':.5}
                    active:False
                    