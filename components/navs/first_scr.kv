<Nav_first_scr>:
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:1,.05
        pos_hint:{'center_x':.5,'center_y':.88}
        padding:'5dp'
        md_bg_color: app.theme_cls.primary_color
        MDLabel:
            text:"Main Page"
            halign:"center"
            bold:True
            color:'#1f2ce6ff'
            font_size:'20sp'
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.95,.05
        pos_hint:{'center_x':.5,'center_y':.823}
        spacing:'5dp'
        #padding:'5dp'
        #md_bg_color:'#236fc7ff'
        Btn:
            text: 'From Date'
            id:from_date_id
            on_release:app.show_date_picker(root.from_date_fun)
        Btn:
            text: 'To Date'
            id:to_date_id
            on_release:app.show_date_picker(root.to_date_fun)
        Line_text:
            id:io_id
            hint_text: 'IO'
            on_focus:
                if self.focus:app.show_menu_dialog('IO',root.search_io_fun,root.menu_page_next,root.menu_page_prve,root.on_submit_menu)
                Clock.schedule_once(partial(root.load_menu_fun,'io'),0.5)
        Line_text:
            id:style_id
            hint_text: 'style'
            on_focus:
                if self.focus:app.show_menu_dialog('style',root.search_style_fun,root.menu_page_next,root.menu_page_prve,root.on_submit_menu)
                Clock.schedule_once(partial(root.load_menu_fun,'style'),0.5)
        Line_text:
            id:color_id
            hint_text: 'color'
            on_focus:
                if self.focus:app.show_menu_dialog('color',root.search_color_fun,root.menu_page_next,root.menu_page_prve,root.on_submit_menu)
                Clock.schedule_once(partial(root.load_menu_fun,'color'),0.5)
        Line_text:
            id:pi_id
            hint_text: 'pi'
            on_focus:
                if self.focus:app.show_menu_dialog('pi',root.search_color_fun,root.menu_page_next,root.menu_page_prve,root.on_submit_menu)
                Clock.schedule_once(partial(root.load_menu_fun,'pi'),0.5)
        Line_text:
            id:search_id
            hint_text:'search'
        Btn:
            text: 'Search'
            on_press:root.search_fun()
        Btn:
            text: 'clear'
            on_press:root.clear_fun()
    
    MDBoxLayout:
        orientation:'vertical'
        size_hint:.95,.74
        pos_hint:{'center_x':.5,'center_y':.42}
        padding:'5dp'
       # md_bg_color:'#e5e6eeff'
        SelectCardRecycleView:
            id:list_card
          
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:1,.05
        pos_hint:{'center_x':.5,'center_y':.023}
        #padding:'5dp'
        md_bg_color:app.theme_cls.primary_light
        Lyt:
            MDIconButton:
                icon: 'chevron-left'
                theme_text_color:'Custom'
                text_color:'#1f2ce6ff'
                pos_hint:{'center_x':.3,'center_y':.5}
                on_press:
                    root.page_prves()
            MDLabel:
                id:card_page_status
                text:"Documents List"
                halign:"center"
                bold:True
                color:app.theme_cls.opposite_bg_light
            MDIconButton:
                icon: 'chevron-right'
                theme_text_color:'Custom'
                text_color:'#1f2ce6ff'
                pos_hint:{'center_x':.7,'center_y':.5}
                on_press:
                    root.page_prves()
                
            MDIconButton:
                icon: 'plus'
                theme_text_color:'Custom'
                text_color:'green'
                md_bg_color:0, .5,0,0.7
                pos_hint:{'center_x':.95,'center_y':2}
                on_press:
                    root.nav_manager.current = "add_scr"
                    root.nav_manager.get_screen('add_scr').cancel_document()
    Spin:
        id:spin
        pos_hint:{'center_x':.5,'center_y':.5} 
        active:False 