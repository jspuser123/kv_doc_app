<Forgot_page>:
    MDBoxLayout:
        pos_hint:{'center_x':.5,'center_y':.5}
        padding:'10dp'
        Lyt:
            MDIconButton:
                icon:'arrow-left'
                pos_hint:{'center_y':.95}
                on_release:
                    app.root.current='login_scr'
                    app.root.transition.direction = "right"
            MDLabel:
                text:'Verify your email'
                halign:'center'
                pos_hint:{'center_y':.95}
                bold:True
                color:'blue'
            Login_img:
                pos_hint:{'center_x':.5,'center_y':.83}
                size_hint:.2,.2
            MDLabel:
                text:'Forgot \nPassword?'
                halign:'left'
                pos_hint:{'center_y':.75}
                bold:True
                color:'teal'
            MDLabel:
                text:'Enter your email address and we will send you instrution to reset your password'
                halign:'center'
                pos_hint:{'center_y':.67}
            MDTextField:
                id:sending_email
                mode:'fill'
                hint_text:'Pls enter your email'
                pos_hint:{'center_x':.5,'center_y':.53}
                size_hint_x:.5
            MDRaisedButton:
                text:'send'
                size_hint_x:.3
                pos_hint:{'center_x':.5,'center_y':.43}
                on_release:root.verify_email()
            MDTextField:
                id:otp_text
                hint_text:'Pls enter otp'
                pos_hint:{'center_x':.5,'center_y':.3}
                size_hint_x:.5
                opacity:0
            MDRaisedButton:
                id:otp_submit
                text:'submit'
                pos_hint:{'center_x':.5,'center_y':.2}
                opacity:0
                on_release:root.otp_verfiy()
            Bottom_lbl:
                pos_hint:{'center_y':.05,'x':.85}
    Spin:
        id:spin
        active:False
        pos_hint:{'center_x':.5,'center_y':.5}