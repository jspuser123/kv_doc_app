<Login_page>:
    MDScreen:
        md_bg_color:'#3D38A4'
        
        Top_lbl:
            pos_hint:{'x':.03,'center_y':.7}
        Login_img:
            pos_hint:{'center_x':.25,'center_y':.37}
            size_hint:.5,.5
    MDCard:
        orientation:'vertical'
        size_hint:None,1
        pos_hint:{'right':1}
        width:'500dp'
        radius:[20,0,5,20]
        Lyt:
            size_hint_y: None
            height:"700dp"
            Logo_img:
                pos_hint:{'center_x':.5,'center_y':.88}
                size_hint:None,None
                height:'300dp'
                width:'300dp'

            MDLabel:
                text:'Welcome to login'
                halign:'center'
                font_style:'H4'
                pos_hint:{'center_y':.78}
                bold: True
                color:'#3D38A4'
            MDLabel:
                text:'users'
                halign:'center'
                font_style:'Subtitle2'
                pos_hint:{'center_y':.72}
                bold: True
            MDLabel:
                id:time_at
                text:''
                pos_hint:{'center_y':.92, 'center_x':.7}
                bold: True
                color:'red'
            MDLabel:
                text:'username'
                font_style:'Body1'
                pos_hint:{'x':.17,'center_y':.66}
                bold: True
            MDTextField:
                id:user1
                mode:'round'
                pos_hint:{'center_x':.5,'center_y':.6}
                size_hint:None,None
                size:'330','100'
                hint_text:'Username'
                fill_color_normal:'#FEFEFE'
                required:True
                hint_text_color_normal: "grey"
                write_tab:False
                icon_left: "account"
            MDLabel:
                text:'password'
                font_style:'Body1'
                pos_hint:{'x':.17,'center_y':.52}
                bold: True
            MDTextField:
                id:pass1
                mode:'round'
                pos_hint:{'center_x':.5,'center_y':.46}
                size_hint:None,None
                size:'330','100'
                hint_text:'Password'
                fill_color_normal:'#FEFEFE'
                hint_text_color_normal: "grey"
                required:True
                write_tab:False
                password: True
                icon_left: "key-variant"
            MDFlatButton:
                text:'Forgot password?'
                pos_hint:{'center_x':.7,'center_y':.4}
                theme_text_color: "Custom"
                text_color: "blue"
                on_release:
                    app.root.current='forgot_scr'
                    app.root.transition.direction = "left"
            MDFillRoundFlatButton:
                id:Submit_login
                text:'Submit'
                pos_hint:{'center_x':.5,'center_y':.3}
                text_color: "white"
                line_color: "skyblue"
                md_bg_color:'blue'
                size_hint:.4,None
                font_style:'Button'
                on_release:
                    root.ids.spin.active=True
                    root.verify_fun_thread()
            MDLabel:
                text:'Don t have an account?'
                pos_hint:{'center_x':.75,'center_y':.24}

            MDFlatButton:
                text:'Register'
                pos_hint:{'center_x':.67,'center_y':.24}
                theme_text_color: "Custom"
                text_color: "orange"
                font_style:'Button'
                on_release:
                    app.root.current='reg_scr'
                    app.root.transition.direction = "up"
            MDIconButton:
                icon: "eye-off"
                pos_hint:{'center_y':.46,'center_x':.78}
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    pass1.password = False if pass1.password is True else True
            Bottom_lbl:
                pos_hint:{'center_y':.05,'x':.5}
    Spin:
        id:spin
        active:False
        pos_hint:{'center_x':.5,'center_y':.5}