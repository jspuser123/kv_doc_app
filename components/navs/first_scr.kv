<Nav_first_scr>:
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.95,.05
        pos_hint:{'center_x':.5,'center_y':.88}
        padding:'5dp'
        MDLabel:
            text:"Document List"
            halign:"center"
            bold:True
            color:'#1f2ce6ff'
            font_size:'20sp'
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.95,.05
        pos_hint:{'center_x':.5,'center_y':.823}
        spacing:'5dp'
        #padding:'5dp'
        #md_bg_color:'#236fc7ff'
        Btn:
            text: 'From Date'
            id:from_date_id
            on_release:app.show_date_picker(root.from_date_fun)
        Btn:
            text: 'To Date'
            id:to_date_id
            on_release:app.show_date_picker(root.to_date_fun)
        Line_text:
            id:io_id
            hint_text: 'IO'
            on_focus: if self.focus:root.io_menu.open()
            #text_call:root.text_change(io_id.text_in.text)
        Line_text:
            id:style_id
            hint_text: 'style'
            on_focus: if self.focus:root.style_menu.open()
        Line_text:
            id:color_id
            hint_text: 'color'
            on_focus: if self.focus:root.color_menu.open()
        Line_text:
            id:pi_id
            hint_text: 'pi'
            on_focus: if self.focus:root.pi_menu.open()
        Line_text:
            id:search_id
            hint_text:'search'
        Btn:
            text: 'Search'
            on_press:root.search_fun()
        Btn:
            text: 'clear'
            on_press:root.clear_fun()
    
    MDBoxLayout:
        orientation:'vertical'
        size_hint:.95,.74
        pos_hint:{'center_x':.5,'center_y':.42}
        padding:'5dp'
       # md_bg_color:'#e5e6eeff'
        SelectCardRecycleView:
            id:list_card
          
    MDBoxLayout:
        orientation:'horizontal'
        size_hint:.95,.05
        pos_hint:{'center_x':.5,'center_y':.023}
        #padding:'5dp'
        Lyt:
            MDIconButton:
                icon: 'plus'
                theme_text_color:'Custom'
                text_color:'green'
                md_bg_color:0, .5,0,0.7
                pos_hint:{'center_x':.95,'center_y':2}
                on_press:
                    root.nav_manager.current = "add_scr"
                    root.nav_manager.get_screen('add_scr').cancel_document()