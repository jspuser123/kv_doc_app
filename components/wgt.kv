<ProfileImage@Image>:   
    source: "assets/images/ai.png"
    radius:[20]
<Logo_img@Image>:
    source: 'assets/images/profile.png'
<Login_img@Image>:
    source: 'assets/images/company.png'
<Style_img@Image>:
    source: 'assets/images/profile.png'
    size_hint:.9,.9
<Top_lbl@MDLabel>:
    text:'Softwere Name'
    font_size:'40sp'
    color:'white'
    font_name: 'assets/fonts/Pacifico.ttf'

<Bottom_lbl@MDLabel>:
    text:'Powered By TechTransformers'
    color:'#3D38A4'
    font_name: 'assets/fonts/Pacifico.ttf'
<Lbl1>:
    font_style: "Body1"
    size_hint_y: None
    height: self.texture_size[1]
    padding: "10dp"
    allow_selection: True
    canvas.before:
        Color:
            rgba:get_color_from_hex("#46A2AA")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (0, 0), (10, 10), (0, 0)]
<Doc_lbl@MDLabel>:
    size_hint_y: None
    height: self.texture_size[1]
    bold:True
    color:app.theme_cls.opposite_bg_light
<Doc_icn@MDIcon>:
    font_size:'25sp'
    bold:True
    color:app.theme_cls.opposite_bg_light
    pos_hint:{'center_y':.5}
<OTPInput@MDTextField>:
    size_hint_x: None
    width: dp(40)
    max_text_length: 1
    required: True
    write_tab:False
    input_type: 'number'
    font_size: '24sp'
    halign: 'center'
    input_filter: "int"
<Textboxcustom>:
    md_bg_color:(200/255, 191/255, 206/255,1)
    radius: [22, 22, 22, 22]
    TextInput:
        id:get_data
        hint_text: "text"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint:1,.8
        height:'30dp'
        font_size: '18sp'
        cursor_color: 1, 170/255, 25/255, 1
        background_color:0,0,0,0
        foreground_color: 1, 170/255, 25/255, 1
        cursor_width: '2sp'
        padding:10
<Spin@MDSpinner>:
    size_hint: None, None
    size: dp(56), dp(56)
    color:app.theme_cls.primary_dark
    palette:
        [0.28627450980392155, 0.8431372549019608, 0.596078431372549, 1],[0.3568627450980392, 0.3215686274509804, 0.8666666666666667, 1],[0.8862745098039215, 0.36470588235294116, 0.592156862745098, 1],[0.8784313725490196, 0.9058823529411765, 0.40784313725490196, 1],
<ContentNavigationDrawer>
    MDList:
        ProfileImage:
            size_hint_y: None
            height: dp(200)
        OneLineIconListItem:
            text: "main"
            on_press:
                root.nav_drawer.set_state("close")
                root.nav_manager.current = "first_scr"
            IconLeftWidget:
                icon: "home"
        OneLineIconListItem:
            text: "logout"
            on_press:
                root.nav_drawer.set_state("close")
                app.root.current='login_scr'
                app.root.transition.direction = "right"
            IconLeftWidget:
                icon: "logout"
                
        OneLineIconListItem:
            text: "Exit"
            on_press:
                root.nav_drawer.set_state("close")
                app.on_exit()
            IconLeftWidget:
                icon: "exit-to-app"        
<DialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y:None
    height: "420dp"
    MDTextField:
        id: name
        hint_text: "Name"

<RightCheckbox>:
    size_hint: None, None
    size: dp(56), dp(56)
<List_item>:
    text: ""
    ImageLeftWidget:
        source: "assets/images/chat.jpg"
<About_card>:
    spacing: "10dp"
    size_hint_y: None
    height: "130dp"
    elevation:2
    MDIcon:
        icon:root.source
        theme_text_color: "Custom"
        text_color: root.icn_color
        font_size: "22sp"
        pos_hint:{'center_y':.5}
    MDLabel:
        text:root.text
        font_style: "Body1"
        halign: "left"
        valign: "center"
        color:root.text_color
        size_hint_y:.1
        pos_hint:{'center_y':.5}
<Lyt@MDRelativeLayout>: